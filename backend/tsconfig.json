  // Visit https://aka.ms/tsconfig to read more about this file
  {
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",

    "target": "ES2020",             
    "module": "CommonJS",           
    "esModuleInterop": true,        
    "moduleResolution": "node",     

    "types": ["node"],

    "sourceMap": true,
    "declaration": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "skipLibCheck": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "build"]
}
